<div class="form-group col-4 mx-auto my-2 w-25 border p-3 bg-dark bg-gradient text-white bg-opacity-75">
    <form action="login" method="post"> 
        <fieldset>
            <h4 class="d-block mx-auto my-2 text-center">Login</h4>
            <label for="username">User Name</label>
            <input type="text" name="username" id="username" class="form-control" placeholder="Username" required>
            <br>
            <label for="thumbnail">Password</label>
            <input type="password" name="password" id="password" class="form-control" placeholder="Password" required>
            <br>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary mx-auto">Login <i class="fa fa-login"></i></button>
                <button type="reset" class="btn btn-danger mx-auto">Reset</button>
            </div>
        </fieldset>
    </form>
</div>